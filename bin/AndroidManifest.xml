<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.himanshugupta53.triggeraction"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.himanshugupta53.triggeraction.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.himanshugupta53.triggeraction.utility.CustomListActivity"
            android:label="@string/title_activity_custom_list" >
        </activity>
        <activity
            android:name="com.himanshugupta53.triggeraction.trigger.TriggerActivity"
            android:label="@string/title_activity_trigger" >
        </activity>
        <activity
            android:name="com.himanshugupta53.triggeraction.utility.CustomExpandableListActivity"
            android:label="@string/title_activity_custom_expandable_list" >
        </activity>
        <activity
            android:name="com.himanshugupta53.triggeraction.utility.PopupActivity"
            android:label="@string/title_activity_popup" >
        </activity>
        <activity
            android:name="com.himanshugupta53.triggeraction.action.ActionActivity"
            android:label="@string/title_activity_action" >
        </activity>

        <receiver android:name=".utility.broadcastreceiver.WifiStateChangedReceiver" >
            <intent-filter>
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        <service android:permission="android.permission.READ_LOGS" android:name=".utility.MyService"></service>
        <receiver android:name=".utility.broadcastreceiver.AppOpened">
            <intent-filter>
                <action android:name="AppOpened"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".utility.broadcastreceiver.SMSReceived">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".utility.broadcastreceiver.PhoneCallReceived">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".utility.broadcastreceiver.PhoneCallMade">
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".utility.broadcastreceiver.WifiConnected">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".utility.broadcastreceiver.ScreenLock">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SCREEN_ON"/>
                <action android:name="android.intent.action.ACTION_SCREEN_OFF"/>
                <action android:name="android.intent.action.USER_PRESENT"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".utility.broadcastreceiver.GPSStateChanged">
            <intent-filter>
                <action android:name="android.location.PROVIDERS_CHANGED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>